<%= form_with(url: search_horses_path, local: true, method: "get", class: 'mt-5 mb-5') do %>
  <div class="ml-10">
    <div class="control">
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search Horses By Name') %>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is-info") %>
    </div>
  </div>
<% end %>